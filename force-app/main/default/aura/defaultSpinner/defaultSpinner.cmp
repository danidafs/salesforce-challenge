<aura:component >

	<aura:attribute name="colorMode" type="String" default="community" />
	
	<div class="slds-grid">

		<div class="spinner-custom-class slds-spinner_container" style="height: 100%;">
	  		<div role="status" class="{!v.colorMode + ' slds-spinner--inverse slds-spinner slds-spinner_large'}">
	    		<div class="{!v.colorMode + ' slds-spinner__dot-a'}"></div>
	    		<div class="{!v.colorMode + ' slds-spinner__dot-b'}"></div>
	  		</div>
		</div>

	</div>

</aura:component>